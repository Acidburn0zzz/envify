{
  "manifest_version": 2,
  "name": "Envify",
  "version": "0.2",

  "description": "Colorify tabs with current env",

  "icons": {
    "48": "icons/envify.svg"
  },

  "permissions": [
    "tabs",
    "storage",
    "theme"
  ],

  "options_ui":{
    "page": "popup/manage_env.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
