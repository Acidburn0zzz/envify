{
  "manifest_version": 2,
  "name": "Envify",
  "version": "0.1",

  "description": "Colorify tabs with current env",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action":{
    "default_icon": "icons/border-48.png",
    "default_title": "Envify",
    "default_popup": "popup/manage_env.html"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
